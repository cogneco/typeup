{
  "name": "typeup",
  "description": "Markup for documents.",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "setup": "npm install",
    "start": "node ./build/app.js",
    "prestart": "npm run build",
    "prebuild": "tslint --config .vscode/tslint.json --project source/tsconfig.json",
    "build": "tsc -p ./source && echo '#!/usr/bin/env node' > build/app && browserify --node build/app.js >> build/app && chmod 755 build/app",
    "predeploy": "npm install && npm run build",
    "deploy": "sudo cp build/app /usr/local/bin/typeup",
    "clean": "rm -rf build node_modules",
    "dev": "watch 'npm run build' source",
    "pretest": "npm run build",
    "test": "node ./build/app.js self-test",
    "prepublish": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^8.0.26",
    "browserify": "^16.2.0",
    "tslint": "^5.9.1",
    "typescript": "^2.8.3"
  },
  "dependencies": {
    "@cogneco/mend": "^1.5.13"
  }
}
